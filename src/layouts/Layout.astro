---
import "../styles/global.css"
export interface Props {
  title: string
}

const { title } = Astro.props
---

<style>
  main {
	display: contents;
  }

  body {
	display: grid;
	grid-template-rows: 100px 1fr 100px;
  }
  
  footer {
    margin: var(--size-2);
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  header {
	display: flex;
	align-items: center;
	justify-content: center;
  }
  
  header h1 {
	margin:0;
	font-size: var(--font-size-8);
	font-weight: var(--font-weight-9);
  }
  
</style>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
	<header>
		<h1>{title}</h1>
	</header>
    <main>
      <slot />
    </main>
    <footer>
      <a href="/minecraft">Minecraft Server Status</a>
    </footer>
  </body>
</html>
